pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }

        stage('Git') {
            steps {
                git branch: 'Sayed-Ben-Slimene', url: 'https://github.com/CAPDEV-ORG/DevOps-ProjectFoyer.git'
            }
        }

        stage('Testing mvn') {
            steps {
                sh 'mvn --version'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Display Date') {
            steps {
                script {
                    def currentDate = new Date()
                    echo "Current Date: ${currentDate}"
                }
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Jenkins Build ${currentBuild.fullDisplayName}",
                body: """The build ${currentBuild.fullDisplayName} has completed.
                Build URL: ${env.BUILD_URL}""",
                to: 'sayed.benslimene@esprit.tn',
                from: 'sayedbenslimane@gmail.com',
                attachLog: true,
                mimeType: 'text/plain'
            )
        }
    }
}
